{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "watchPatterns": [
      "server/**/*",
      "client/**/*"
    ],
    "dockerfilePath": "server/Dockerfile"
  },
  "deploy": {
    "startCommand": "",
    "healthcheckPath": "/api/menu",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
} 